{
  "id": null,
  "title": "API Gateway Health Dashboard",
  "tags": ["auto", "api-gateway"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "title": "High CPU Usage",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"api-gateway\"}[1m])",
          "legendFormat": "CPU Usage",
          "interval": ""
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Replica Count",
      "type": "stat",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 5 },
      "targets": [
        {
          "expr": "count(up{job=\"api-gateway\"})",
          "legendFormat": "Pod Count"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Too Many Requests (429)",
      "type": "timeseries",
      "gridPos": { "x": 6, "y": 8, "w": 6, "h": 5 },
      "targets": [
        {
          "expr": "rate(api_gateway_429_total[1m])",
          "legendFormat": "429 Errors"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    }
  ]
}
